<%= simple_form_for @equipment,
defaults: { input_html: { class: 'form-control' } } do |f| %>
  <div class="form-group">
    <%= f.input :code %>
  </div>
  <div class="form-group">
    <%= f.input :name %>
  </div>
  <div class="form-group">
    <%= f.input :serial_number %>
  </div>
  <div class="form-group">
    <%= f.input :supplier %>
  </div>
  <div class="form-group">
    <%= f.input :category %>
  </div>
  <div class="form-group">
    <%= f.input :value %>
  </div>
  <div class="form-group">
    <%= f.input :status %>
  </div>
  <%= f.submit button_label, class: 'btn btn-default'%>
<% end %>
