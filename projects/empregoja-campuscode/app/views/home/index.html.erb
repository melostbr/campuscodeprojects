<div class="row">
  <div class="col-md-9">
    <section class="jobs">
      <% @jobs.each do |job| %>
          <div class="panel panel-default col-md-5">
            <h3><%= job.title %></h3>
            <p><%= job.location %></p>
            <p><%= job.company.name %></p>
            <p><%= job.category.name %></p>
            <% if job.recent? %>
            <p><em>Novidade</em></p>
            <% end %>
            <%= link_to 'Ver mais', job %>
          </div>
      <% end %>
    </section>
  </div>
  <div class="col-md-3">
    <aside>
      <h3>Empresas</h3>
      <ul class="list-group">
        <% @companies.each do |company| %>
        <li><%= link_to company.name, company, class: "list-group-item" %></li>
        <% if company.premium?  %>
        <p>Empresa Premium</p>
        <% end %>
        <% end %>
      </ul>

    </aside>
    <aside>
      <h3>Categorias</h3>
      <ul class="list-group">
        <% @categories.each do |category| %>
        <li><%= link_to category.name, category, class: "list-group-item" %></li>
        <% end %>
      </ul>
    </aside>
  </div>
</div>
