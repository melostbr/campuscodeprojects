<dl class="dl-horizontal">
  <dt>Título: </dt>
  <dd><%= job.title %></dd>
  <dt>Local: </dt>
  <dd><%= job.location %></dd>
  <dt>Categoria: </dt>
  <dd><%= job.category.name %></dd>
  <dt>Descrição: </dt>
  <dd><%= job.description %></dd>
  <% if job.recent? %>
  <p><em>Novidade</em></p>
  <% end %>
  <%= link_to 'Ver mais', job %>
</dl>
