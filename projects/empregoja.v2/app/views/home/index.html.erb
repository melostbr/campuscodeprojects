<% @jobs.each do |job| %>
<h1><%= link_to job.title, job_path(job)  %></h1>
  <%= job.company.name %>
  <%= job.location %>
  <% if job.featured? %>
    <strong>Destaque</strong>
  <% end  %>
<% end %>

<aside>
  <% @companies.each do |company| %>
    <%= link_to company.name, company_path(company) %>
  <% end  %>
</aside>
